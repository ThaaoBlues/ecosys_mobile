<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BienvenueActivity">

    <ImageView
        android:id="@+id/imageView_bienvenue"
        android:layout_width="383dp"
        android:layout_height="316dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/test" />

    <TextView
        android:id="@+id/textview_bienvenue"
        android:layout_width="350dp"
        android:layout_height="283dp"
        android:text="@string/welcome_msg"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_bienvenue"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_ok_bienvenue"
        android:layout_width="255dp"
        android:layout_height="105dp"
        android:layout_marginTop="20dp"
        android:text="OKAY !"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_bienvenue" />
</androidx.constraintlayout.widget.ConstraintLayout>